<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slothnull.android.medox.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Configuration"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/maxHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Max Heart Rate:  "
            android:inputType="number"
            android:nextFocusLeft="@+id/maxHeart"
            android:nextFocusUp="@+id/maxHeart"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/minHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Min Heart Rate:  "
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Mobile Number:  "
            android:inputType="phone"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mobileNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Mobile Number 2:  "
            android:inputType="phone"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <EditText
            android:id="@+id/careSkype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Care Giver Skype:  "
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/seniorSkype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Senior Citizen Skype:  "
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/maxDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Max Distance:  "
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enabledView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Enabled:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/enabledLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <CheckedTextView
                android:id="@+id/settingsEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:text="Settings"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckedTextView
                android:id="@+id/warehouseEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:text="Warehouse"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckedTextView
                android:id="@+id/scheduleEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:text="Schedule"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </GridLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="50dp"
                android:ems="5"
                android:padding="5dp"
                android:text="Location:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/locationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/textView20"
                android:clickable="true"
                android:onClick="locate"
                app:elevation="0dp"
                app:fabSize="normal"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/locationButton"
                android:layout_marginEnd="21dp"
                android:clickable="true"
                android:onClick="save"
                app:elevation="0dp"
                app:fabSize="normal"
                app:srcCompat="@android:drawable/ic_menu_send" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
